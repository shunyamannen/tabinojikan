<%= form_with model: user do |f| %>
  <div class="row">
    <div class="col-sm-6">
      <div class="form-group mt-2">
        <%= f.label "ユーザー名" %>
        <%= f.text_field :name, class:"form-control", placeholder:"ユーザー名をここに" %>
      </div>
      <div class="form-group mt-2">
        <%= f.label "メールアドレス" %>
        <%= f.text_field :email, class:"form-control" %>
      </div>
      <div class="form-group">
        <%= f.label "紹介文" %>
        <%= f.text_area :introduction, class:"form-control",rows:"5", placeholder:"内容をここに" %>
    　</div>
    </div>
  </div>
　　<div class="form-group col-sm-2">
    <%= f.submit '登録する', class:"btn btn-lg btn-block btn-primary"%>
  </div>
<% end %>