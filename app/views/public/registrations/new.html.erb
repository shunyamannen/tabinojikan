<div class="container">
  <div class="row mt-3 mb-3">
    <div class="col offset-1">
      <h4>ユーザー登録</h4>
    </div>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="row mb-3 text-center">
      <%= render "public/shared/error_messages", resource: @user %>
    </div>

    <div class="row mb-3">
      <div class="col-md-4 mx-auto">
        <%= f.label "ユーザー名" %>
        <%= f.text_field :name, autofocus: true, class:"form-control" %>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-md-4 mx-auto">
        <%= f.label "メールアドレス" %>
        <%= f.email_field :email, class:"form-control" %>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-md-4 mx-auto">
        <%= f.label "パスワード" %>(<%= @minimum_password_length %> 文字以上)
        <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-md-4 mx-auto">
        <%= f.label "パスワード（確認）" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-md-4 mx-auto">
        <%= f.submit "新規登録", class:"btn btn-primary" %>
        <%= link_to "ゲストログインで試す", users_guest_sign_in_path, method: :post, class:"ml-5 btn btn-secondary" %>
      </div>
    </div>
    <% end %>

    <div class="row mt-5">
      <div class="col-md-12 text-center">
        <h5 class="bg-black-50">既に会員登録済みの方</h5>
        <p><%= link_to "　こちら　", new_session_path(resource_name) %>からログインしてください。</p>
      </div>
    </div>

</div>