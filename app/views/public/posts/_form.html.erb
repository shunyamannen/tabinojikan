<!--入力フォーム-->
<%=form_with model: @post do |f| %>
  <div class="form-group">
    <%= f.file_field :image, accept: "image/*", class:"w-100" %>
  </div>

  <div class="form-group">
    <%= f.label "タイトル" %>
    <%= f.text_field :title, class:"form-control", placeholder:"タイトルをここに" %>
  </div>

  <div class="form-group">
    <%= f.label "本文" %>
    <%= f.text_area :body, class:"form-control",rows:"5", placeholder:"内容をここに" %>
  </div>

  <div class="form-group">
    <%= f.submit '登録する', class:"btn btn-lg btn-block btn-primary mt-4"%>
  </div>
<% end %>